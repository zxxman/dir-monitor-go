{
  "version": "3.2.1",
  "monitors": [
    {
      "id": "user2_daytime",
      "name": "用户2白天CSV处理",
      "directory": "/sftp/user2/data",
      "command": "/opt/python-envs/bin/python /sftp/user2.py",
      "file_patterns": [
        "*.csv"
      ],
      "timeout": 300,
      "schedule": "* 15-21 * * 1-5",
      "debounce_seconds": 15,
      "enabled": true,
      "priority": 1,
      "description": "工作日上午11点至晚上9点处理用户2的CSV文件"
    },
    {
      "id": "user2_nighttime",
      "name": "用户2夜间CSV处理",
      "directory": "/sftp/user2/data",
      "command": "/opt/python-envs/bin/python /sftp/user2N.py",
      "file_patterns": [
        "*.csv"
      ],
      "timeout": 300,
      "schedule": "* 0-9 * * 1-6",
      "debounce_seconds": 15,
      "enabled": true,
      "priority": 1,
      "description": "凌晨0点至上午9点处理用户2的CSV文件"
    },
    {
      "id": "user3_daytime",
      "name": "用户3白天Excel处理",
      "directory": "/sftp/user3/data",
      "command": "/opt/python-envs/bin/python /sftp/user3.py",
      "file_patterns": [
        "*.xls",
        "*.xlsx"
      ],
      "timeout": 300,
      "schedule": "* 15-21 * * 1-5",
      "debounce_seconds": 15,
      "enabled": true,
      "priority": 1,
      "description": "工作日上午11点至晚上9点处理用户3的Excel文件"
    },
    {
      "id": "user3_nighttime",
      "name": "用户3夜间Excel处理",
      "directory": "/sftp/user3/data",
      "command": "/opt/python-envs/bin/python /sftp/user3N.py",
      "file_patterns": [
        "*.xls",
        "*.xlsx"
      ],
      "timeout": 300,
      "schedule": "* 0-9 * * 1-6",
      "debounce_seconds": 15,
      "enabled": true,
      "priority": 1,
      "description": "凌晨0点至上午9点处理用户3的Excel文件"
    },
    {
      "id": "user4_daytime",
      "name": "用户4白天高级Excel处理",
      "directory": "/sftp/user4/data",
      "command": "/opt/python-envs/bin/python /sftp/user4.py",
      "file_patterns": [
        "*.xlsx"
      ],
      "timeout": 300,
      "schedule": "* 15-21 * * 1-5",
      "debounce_seconds": 15,
      "enabled": true,
      "priority": 1,
      "description": "工作日上午11点至晚上9点处理用户4的高级Excel文件"
    },
    {
      "id": "user4_nighttime",
      "name": "用户4夜间高级Excel处理",
      "directory": "/sftp/user4/data",
      "command": "/opt/python-envs/bin/python /sftp/user4N.py",
      "file_patterns": [
        "*.xlsx"
      ],
      "timeout": 300,
      "schedule": "* 0-9 * * 1-6",
      "debounce_seconds": 15,
      "enabled": true,
      "priority": 1
    },
    {
      "id": "outbound_daytime",
      "name": "白天数据发送",
      "directory": "/sftp/out",
      "command": "/opt/mail-tool/mail-tool -t DAILY_DATA1",
      "file_patterns": [
        "*.csv"
      ],
      "timeout": 300,
      "schedule": "* 15-21 * * 1-5",
      "debounce_seconds": 15,
      "enabled": true,
      "priority": 2,
      "description": "工作日上午11点至晚上9点发送日常数据"
    },
    {
      "id": "outbound_nighttime",
      "name": "夜间数据发送",
      "directory": "/sftp/out",
      "command": "/opt/mail-tool/mail-tool -t NIGHTLY_DATA1",
      "file_patterns": [
        "*.csv"
      ],
      "timeout": 300,
      "schedule": "* 0-9 * * 1-6",
      "debounce_seconds": 15,
      "enabled": true,
      "priority": 2,
      "description": "凌晨0点至上午9点发送夜间数据"
    }
  ],
  "settings": {
    "log_file": "logs/dir-monitor-go.log",
    "log_show_caller": true,
    "log_max_size": 10485760,
    "log_compress": true,
    "max_concurrent_operations": 10,
    "operation_timeout_seconds": 600,
    "file_stability_check_interval_ms": 1000,
    "file_stability_timeout_seconds": 180,
    "min_stability_time_ms": 10000,
    "default_debounce_seconds": 10,
    "directory_stability_quiet_ms": 5000,
    "directory_stability_timeout_seconds": 180,
    "small_file_threshold": 1048576,
    "medium_file_threshold": 10485760,
    "large_file_threshold": 104857600,
    "default_rule_debounce_seconds": 60,
    "default_rule_priority": 5,
    "performance_monitoring": true
  }
}