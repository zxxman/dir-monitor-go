{
  "version": "3.2.0",
  "metadata": {
    "name": "Dir-Monitor-Go 示例配置",
    "description": "目录监控工具的配置文件示例，支持目录稳定性处理",
    "environment": "development",
    "author": "系统管理员",
    "created_date": "2025-10-31"
  },
  "monitors": [
    {
      "id": "example_csv_processor",
      "name": "CSV文件处理器",
      "description": "处理CSV格式数据文件",
      "directory": "/data/csv_files",
      "command": "python /scripts/process_csv.py ${FILE_PATH}",
      "file_patterns": ["*.csv", "*.CSV"],
      "timeout": 300,
      "schedule": "* 9-18 * * 1-5",
      "debounce_seconds": 2,
      "enabled": true
    },
    {
      "id": "example_excel_processor",
      "name": "Excel文件处理器",
      "description": "处理Excel格式报表文件",
      "directory": "/data/excel_files",
      "command": "python /scripts/process_excel.py ${FILE_PATH}",
      "file_patterns": ["*.xlsx", "*.xls"],
      "timeout": 600,
      "schedule": "* 11-21 * * 1-6",
      "debounce_seconds": 3,
      "enabled": true
    },
    {
      "id": "example_backup_handler",
      "name": "备份文件处理器",
      "description": "处理备份文件并移动到归档目录",
      "directory": "/data/backup",
      "command": "mv ${FILE_PATH} /archive/$(date +%Y%m%d)/",
      "file_patterns": ["*.bak", "*.backup"],
      "timeout": 60,
      "debounce_seconds": 5,
      "enabled": false
    }
  ],
  "settings": {
    "log_file": "logs/dir-monitor-go.log",
    "log_level": "info",
    "log_show_caller": true,
    "log_max_size": 10485760,
    "log_max_backups": 5,
    "log_max_age_days": 30,
    "log_compress": true,
    
    "max_concurrent_operations": 10,
    "operation_timeout_seconds": 600,
    "file_watcher_buffer_size": 1024,
    
    "file_stability_check_interval_ms": 200,
    "file_stability_timeout_seconds": 5,
    "min_stability_time_ms": 500,
    "event_channel_buffer_size": 100,
    "default_debounce_seconds": 2,
    
    "execution_dedup_interval_seconds": 5,
    "directory_stability_quiet_ms": 2000,
    "directory_stability_timeout_seconds": 30,
    
    "small_file_threshold": 1048576,
    "medium_file_threshold": 10485760,
    "large_file_threshold": 104857600,
    
    "default_rule_debounce_seconds": 60,
    
    "retry_attempts": 3,
    "retry_delay_seconds": 5,
    "health_check_interval_seconds": 60,
    "performance_monitoring": true
  }
}